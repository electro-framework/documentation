<div id="generateStaticWrap" class="wrapper">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Generate static website or Documentation</h3>
            </div>
            <div class="col-lg-12 formGenerate">
                <div class="row">
                    <!-- gerar stite estatico -->
                    <div class="col-lg-3">
                        <form action="generate-static/init-static" class="form-inline" id="initStaticSite">
                            <button type="submit" class="btn btn-default">Generate Static Site</button>
                        </form>
                    </div>

                    <!-- gerar documentação pelo sami -->
                    <div class="col-lg-3">
                        <form action="generate-static/init-doc" class="form-inline" id="initDocumentation">
                            <button type="submit" class="btn btn-default">Generate Documentation</button>
                        </form>
                    </div>
                </div>
            </div>
            <div id="generateMsg" class="col-lg-12 alert"></div>
            <div id="loadingArea" class="col-lg-12"></div>
        </div>
    </div>
</div>

